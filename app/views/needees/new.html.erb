<%= simple_form_for @needee do |f| %>
  <%= f.input :name %>
  <%= f.input :phone %>
  <%= f.input :alt_phone, label: "Alternate Phone Number", hint: "If you are posting for someone, please provide your phone number" %>
  <%= f.input :locality_id, collection: @localities, label_method: :name, value_method: :id, include_blank: false %>
  <%= f.input :type_of_help, collection: Needee::HelpType.needs, label_method: :text, value_method: :code, include_blank: false %>
  <%= f.input :address %>
  <%= f.input :details, placeholder: "Please provide any information that will help us find you" %>
  <%= recaptcha_tags %>
  <%= f.submit "Help Me", class: "btn btn-primary btn-lg" %>
<% end %>
