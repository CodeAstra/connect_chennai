<% website_title = "Connect Chennai - Bridging those who need with those who can" %>
<% website_description = "Seek and get help for yourself or your relatives and friends in Chennai. Volunteers can connect with fellow volunteers and people looking for help in their locality" %>
<!DOCTYPE html>
<html>
<head>
  <title><%= website_title %></title>
  <meta property="og:site_name" content="<%= website_title %>"/>
  <meta property="og:title" content="<%= website_title %>"/>
  <meta property="og:url" content="http://connect-chennai.codeastra.com/"/>
  <meta property="og:type" content="website"/>
  <meta property="og:description" content="<%= website_description %>"/>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render "common/header" %>
  <div class="container">
    <div class="flash_messages">
      <%= flash_tag(notice, "notice") %>
      <%= flash_tag(alert, "alert") %>
    </div>
    <%= yield %>
  </div>
  <%= render "common/footer" %>

  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
    ga('create', 'UA-71090418-1', 'auto');
    ga('send', 'pageview');
  </script>
</body>
</html>
